import java.util.*;
public class practica2
{
    public static int[][] llenar(){
    Scanner leer=new Scanner(System.in);
    System.out.println("Introduce el tama√±o de la matriz ");
    int t=leer.nextInt();
    int mat[][] = new int[t][t];
    for(int i=0;i<mat.length;i++){
     for(int j=0;j<mat[i].length;j++){
        System.out.printf("Valor para ["+i+"]["+j+"]=");
        mat[i][j]=leer.nextInt();
        }
    }
    return mat;
    }
    public static void ord(int mat[][]){
    for(int i=0;i<mat.length;i++){
      for(int j=0;j<mat[i].length;j++){
          for(int k=0;k<mat.length;k++){
            for(int l=0;l<mat[k].length;l++){
             if(mat[i][j]<mat[k][l]){
                int aux=mat[i][j];
                mat[i][j]=mat[k][l];
                mat[k][l]=aux;
                }  
            }
          }
        }
    }
    }
    public static void imp(int mat[][]){
    for(int i=0;i<mat.length;i++){
        for(int j=0;j<mat[i].length;j++){
        System.out.printf("%4d",mat[i][j]);
        }
    System.out.printf("\n");
    }
    }
        public static void main(String[]args){
    System.out.println("Esto es una prueba ");
    int mat[][]=llenar();
    System.out.println("La matriz desordenada es:");
    imp(mat);
    System.out.println("La matriz ordenada es:");
    ord(mat);
    imp(mat);
    }
}


