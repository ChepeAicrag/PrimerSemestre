/**PROGRAMA DE FLECHA CON FOR */
import java.util.*;
public class flecha2
{
    public static void main(){
    int i=0;  
    Scanner n=new Scanner(System.in);
    System.out.println(" Ingrese el tama√±o de la flecha");
    int t=n.nextInt(); 
     for(i=1; i<=t;i++){
         for(int o=t; o>=i;o--){
            System.out.printf(" ");
       }
            for(int r=1; r<=i;r++){
            System.out.printf("* ");
       }
        System.out.println("  ");
    } 
    for(i=1; i<=(t+2);i++){
       for(int o=1; o<=t;o++){
            System.out.printf(" ");
       }
       System.out.printf("*");
       System.out.println("");     
    }
    }
}
