import java.util.*;
public class Ejercicio5 {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.println("Introduce el largo de la flecha");
        int t=sc.nextInt();
        int num2 = 0;
        for(int i=1; i<=t;i++){
           int num = 0;
           while(num<=num2){
               System.out.print(" * ");
               num++;
           }
           num2++;
           System.out.println("");
        }
    }
    
}